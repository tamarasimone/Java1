package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("Enter a number between 1 and 8");
        int Height = input.nextInt();
     // for 1
        if Height = 1
          System.out.println("The Pattern is");
        for (int i = 0; i < 1; i++) {
            for (int j = 0; j < 1; j++) {
                if (j <= i) {
                    System.out.print("  *");
                } else {
                    System.out.print("   ");
                }
            }
            System.out.println();
        }
 // for 2
        if Height = 2
          System.out.println("The Pattern is");
        for (int i = 0; i < 2; i++) {
            for (int j = 0; j < 2; j++) {
                if (j <= i) {
                    System.out.print("  *");
                } else {
                    System.out.print("   ");
                }
            }
            System.out.println();
        }
         // for 3
        if Height = 3
          System.out.println("The Pattern is");
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                if (j <= i) {
                    System.out.print("  *");
                } else {
                    System.out.print("   ");
                }
            }
            System.out.println();
        }
         // for 4
        if Height = 4
          System.out.println("The Pattern is");
