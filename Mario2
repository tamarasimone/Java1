            for (int j = 0; j < 4; j++) {
                if (j <= i) {
                    System.out.print("  *");
                } else {
                    System.out.print("   ");
                }
            }
            System.out.println();
        }

        //For 5
        if Height = 5
        System.out.println("The Pattern is");
        for (int i = 0; i < 5; i++) {
            for (int j = 0; j < 5; j++) {
                if (j <= i) {
                    System.out.print("  *");
                } else {
                    System.out.print("   ");
                }
            }
            System.out.println();
        }
         // for 6
        if Height = 6
          System.out.println("The Pattern is");
        for (int i = 0; i < 6; i++) {
            for (int j = 0; j < 6; j++) {
                if (j <= i) {
                    System.out.print("  *");
                } else {
                    System.out.print("   ");
                }
            }
            System.out.println();
        }
         // for 7
        if Height = 7
          System.out.println("The Pattern is");
        for (int i = 0; i < 7; i++) {
            for (int j = 0; j < 7; j++) {
                if (j <= i) {
                    System.out.print("  *");
                } else {
                    System.out.print("   ");
                }
            }
            System.out.println();
        }
         // for 8
        if Height = 8
          System.out.println("The Pattern is");
        for (int i = 0; i < 8; i++) {
